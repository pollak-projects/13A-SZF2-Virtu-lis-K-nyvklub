model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  director    Creative @relation(fields: [director_Id], references: [id])
  director_Id Int
  releaseYear Int
  description String
  coverArt    String?

  actors      MovieActor[]
  genres      MovieGenre[]
  characters  MovieCharacter[]
  userRatings UserMovieRating[]
}